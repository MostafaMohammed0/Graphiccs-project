{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug OpenGL Project",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}\\code\\game",  // Use backslashes for the path to the compiled executable
      "args": [],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "C:/msys64/ucrt64/bin/gdb.exe",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "Build OpenGL Project",  // Runs the build task before launching the program
      "miDebuggerArgs": "",
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
